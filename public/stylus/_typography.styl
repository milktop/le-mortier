body
  font-family body-font
  -webkit-font-smoothing antialiased // yay or nay

p, li
  font-weight normal
  font-size 1.105rem
  color body-copy
  
p
  margin-bottom 1.85rem
  line-height 0.25px
  line-height 1.65rem

h1, h2, h3, h4, h5, h6
  font-weight normal
  letter-spacing 0.5px
  color brand

h2
  font-family title-font
  font-style italic
  font-weight 700
  color brand

h3
  font-size 2.8rem
  font-family title-font
  width 80%
  line-height 3.25rem

h5
  font-family body-font
  color white
  text-transform uppercase
