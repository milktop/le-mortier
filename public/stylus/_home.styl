.side-links
  col(0.8/3)
  padding 1rem
  // border 1px dashed
  
  p
    &.intro
      color light-grey
      font-family sans-font
      font-weight 500
      font-size 1rem
      padding 2rem 1.45rem
      margin 0 auto
      
      &:after
        content " "
        // display block
        background light-grey
        height 1.5px
        width 328px
        position relative
        top 38px
        left -72px
      
  ul
    list-style-type none
    border 1.25px solid gold
    padding 1rem
    margin 2.5rem 0 0
    li
      font-family sans-font
      color grey
      padding 1rem 0.45rem
      border-top 1px solid light-grey
      font-size 0.95rem
      letter-spacing 0.25px
      
      &:first-of-type
        padding-top 0.25rem
        border-top none
      
      &.button
        border 1.25px solid gold
        text-align center
        text-transform uppercase
        font-family body-font
        color gold
        padding 1rem
        position relative
        cursor pointer
        margin-top 0.25rem
        
        &:hover
          &:after
            border-width 0 0 15px 15px
            display block
            content " "
        
        &:after
          content " "
          display block
          position absolute
          right 5px
          bottom 5px
          width 0
          height 0
          border-style solid
          border-width 0 0 10px 10px
          border-color transparent transparent gold transparent
          transition all 0.2s ease-in-out
          z-index -1
        
  
.main-content
  col(2.15/3)
  padding-top 1.8rem
  
  h3
    margin-bottom 2.8rem
  
  p
    padding-left 2rem

.side-image
  col(0.85/3)
  padding-top 5rem
  
  img
    width 100%